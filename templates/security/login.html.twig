{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <section class="section has-background-light">
        <div class="container">
            <div class="columns">
                <div class="column is-3 is-offset-3">
{#                    <img src="" alt="Login">#}
                </div>

                <div class="column is-one-quarter is-offset-0">
                    <h2 class="title is-2">{{ 'security.log in'|trans }}</h2>

                    {% if error is not empty %}
                        <div class="notification has-background-danger has-text-white msg-list">
                            <div class="content">
                                <ol class="">
                                    <li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
                                </ol>
                            </div>
                        </div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="POST">

                        <div class="field">
                            <p class="control has-icons-left has-icons-right">
                                <input type="text" name="login"
                                       value="{{ last_username }}"
                                       id="inputLogin"
                                       class="input"
                                       placeholder="{{ 'user.login'|trans|capitalize }}"
                                       required
                                       autofocus
                                >
                                <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                            </p>
                        </div>

                        <div class="field">
                            <p class="control has-icons-left">
                                <input type="password"
                                       name="password"
                                       id="inputPassword"
                                       class="input"
                                       placeholder="{{ 'user.password'|trans|capitalize }}"
                                       required
                                >
                                <span class="icon is-small is-left">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </p>
                        </div>

                        <div class="field">
                            <label>
                                <input type="checkbox"
                                       name="_remember_me"
                                       class="checkbox"
                                       checked
                                > {{ 'security.remember'|trans }}
                            </label>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="field">
                            <p class="control">
                                <button type="submit" class="button is-black">
                                    {{ 'security.log in'|trans }}
                                </button>
                                <a href="{{ path('app_forgot_password_request') }}" class="button is-text is-pulled-right">
                                    {{ 'security.forgot password'|trans }}
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
